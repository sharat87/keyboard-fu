{
    "name": "Keyboard-fu",
    "version": "0.3.1",
    "description": "Super customizable keyboard shortcuts for just the necessities",
    "icons": {
        "16": "res/logo-16.png",
        "48": "res/logo-48.png",
        "128": "res/logo-128.png"
    },
    "permissions": [
        "http://*/*", "https://*/*",
        "tabs"
    ],
    "background_page": "background.html",
    "options_page": "options.html",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["vendor/jquery.js", "js/lib.js", "js/api.js", "js/content-script.js"],
        "css": ["css/content-page.css"]
    }]
}
